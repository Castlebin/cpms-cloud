<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cpms.system.modules.sys.mapper.SysDeptMapper">

    <select id="listDeptCount" parameterType="com.cpms.system.modules.sys.dto.ListDeptDTO" resultType="java.lang.Integer">
        SELECT
        count(1)
        FROM   cpms_system_dept d
        <where>
            d.del_flag = 0
            <if test="deptName !=null and deptName !=''">
                and d.dept_name like CONCAT('%',#{deptName},'%' )
            </if>
        </where>
    </select>

    <select id="listDept" parameterType="com.cpms.system.modules.sys.dto.ListDeptDTO" resultType="com.cpms.system.modules.sys.vo.SysDeptVO">
        SELECT
        dept_id,
        dept_name,
        parent_id,
        create_time,
        update_time,
        create_by,
        update_by
        FROM cpms_system_dept d
        <where>
            d.del_flag = 0
            <if test="deptName !=null and deptName !=''">
                and d.dept_name like CONCAT('%',#{deptName},'%' )
            </if>
        </where>
        limit #{startIndex},#{pageSize}
    </select>
</mapper>